<% layout('layouts/boilerplate') -%>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
        <h3 class="mt-3 mb-2">Edit Listing</h3>
        <form action="/Listings/<%= upd_place._id %>/edit?_method=put" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input name="places[title]" type="text" class="form-control" id="title" placeholder="Enter the title" value="<%= upd_place.title %>" required>
                <div class="invalid-feedback">Please enter a title.</div>
                <div class="valid-feedback">Title looks good!</div>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea name="places[description]" class="form-control" id="description" placeholder="Enter the description" required><%= upd_place.description %></textarea>
                <div class="invalid-feedback">Please enter a short description.</div>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Image URL</label>
                <input name="places[image]" type="text" class="form-control" id="image" placeholder="Enter the image URL" value="<%= upd_place.image %>" required>
                <div class="invalid-feedback">Please provide a valid image URL.</div>
            </div>
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label">Price</label>
                    <input name="places[price]" type="number" class="form-control" id="price" placeholder="Enter the price" value="<%= upd_place.price %>" required>
                    <div class="invalid-feedback">Please enter a valid price.</div>
                </div>
                <div class="mb-3 col-md-8">
                    <label for="country" class="form-label">Country</label>
                    <input name="places[country]" type="text" class="form-control" id="country" placeholder="Enter the country" value="<%= upd_place.country %>" required>
                    <div class="invalid-feedback">Please enter a valid country.</div>
                </div>
            </div>
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input name="places[location]" type="text" class="form-control" id="location" placeholder="Enter the location" value="<%= upd_place.location %>" required>
                <div class="invalid-feedback">Please enter a valid location.</div>
            </div>
            <button class="btn btn-dark my-3" type="submit">Update Place</button>
        </form>
        
    </div>
</div>
</body>

