<% layout('layouts/boilerplate') -%>

<div class="row mt-3">
    <h1 class="col-6 offset-2">Sign Up Here</h1>
    <div class="col-8 offset-2">
        <form action="/signUp" method="post" novalidate class="needs-validation" >
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" name="user[username]" id="username" class="form-control" placeholder="Enter Username" required>
                <div class="valid-feedback">Username is ok</div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" name="user[email]" id="email" class="form-control" placeholder="Enter valid emailId" required>
                <div class="valid-feedback">Email looks good!</div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" name="user[password]" id="password" class="form-control" placeholder="Enter unique password" required>
                <div class="valid-feedback">Password looks good!</div>
            </div>
            <button type="submit" class="btn btn-success">Submit</button>
        </form>
    </div>
</div>